.comment {
  padding: 20rpx 30rpx 40rpx;
  background-color: #ffffff;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
}
.comment .avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 100%;
  margin-right: 30rpx;
}
.comment .right {
  flex: 1;
}
.comment .right > view:nth-child(1) {
  height: 35rpx;
  font-size: 26rpx;
  line-height: 26rpx;
}
.comment .right > view:nth-child(2) {
  height: 35rpx;
  font-size: 25rpx;
  color: #888888;
  margin-bottom: 10rpx;
}
.comment .right > view:nth-child(3) {
  margin-bottom: 10rpx;
  font-size: 27rpx;
}
.comment .right > view:nth-child(4) {
  color: #888888;
  background-color: #eaecf1;
  padding: 20rpx;
  border-radius: 10rpx;
}
