.artical {
  margin: 30rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
  overflow: hidden;
}
.artical .top {
  padding: 20rpx 30rpx 10rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.artical .top .avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 100%;
  margin-right: 20rpx;
}
.artical .top .info {
  flex: 1;
}
.artical .top .info > view:nth-child(1) {
  font-size: 28rpx;
}
.artical .top .info > view:nth-child(2) {
  font-size: 23rpx;
  color: #888888;
  line-height: 40rpx;
}
.artical .content {
  margin: 0 30rpx 20rpx;
  background-color: #ffffff;
  font-size: 33rpx;
  color: #2a2d34;
}
.artical .img_box {
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  flex-wrap: wrap;
  margin: 0 auto;
  padding: 0 30rpx 10rpx;
  background-color: #ffffff;
}
.artical .img_box > .img {
  width: 195rpx;
  height: 195rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 5rpx;
}
.artical .img_box > .img:nth-child(3n+3) {
  margin-right: 0;
}
.artical .img_box > .one_img {
  width: 350rpx;
  height: 350rpx;
  margin-bottom: 15rpx;
  border-radius: 5rpx;
}
.artical .lue3 {
  overflow: hidden;
  display: -webkit-box;
  text-overflow: ellipsis;
  white-space: normal !important;
  word-wrap: break-word;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}
.artical .topic {
  width: max-content;
  height: 45rpx;
  margin: 0 30rpx 20rpx;
  padding: 0 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 40rpx;
  opacity: 0.7;
  font-size: 25rpx;
  background-color: rgba(80, 177, 157, 0.3);
  color: #50b19d;
  font-weight: 500;
}
.artical .tools {
  background-color: #ffffff;
  padding: 0 30rpx 20rpx;
  color: #808080;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.artical .tools > view:nth-child(1) {
  flex: 1;
  font-size: 25rpx;
}
.artical .tools > .iconfont {
  font-size: 38rpx;
  margin-right: 10rpx;
  margin-left: 40rpx;
}
.artical .tools > .count {
  font-size: 27rpx;
}
.link_style {
  color: #3b82f6;
  font-size: 30rpx;
}
